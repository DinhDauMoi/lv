<odoo>
    <template id="vl_carousel" inherit_id="website.snippets" name="Carousel LV">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="lv.carousel" t-thumbnail="/website/static/src/img/snippets_thumbs/s_cover.svg" />
        </xpath>
    </template>
    <template id="vl_pro" inherit_id="website.snippets" name="Product LV">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="lv.pro" t-thumbnail="/website/static/src/img/snippets_thumbs/s_cover.svg" />
        </xpath>
    </template>
    <template id="vl_tag" inherit_id="website.snippets" name="Product LV">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="lv.col_tag" t-thumbnail="/website/static/src/img/snippets_thumbs/s_cover.svg" />
        </xpath>
    </template>
    <template id="vl_plus" inherit_id="website.snippets" name="Product LV">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="lv.carousel_plus" t-thumbnail="/website/static/src/img/snippets_thumbs/s_cover.svg" />
        </xpath>
    </template>
</odoo>